{
  "name": "unit-testing-afternoon",
  "version": "0.1.0",
  "private": true,
  "jest": {
    "watchPathIgnorePatterns": [
      "<rootDir>/src/__tests__/__data__"
    ]
  },
  "dependencies": {
    "axios": "^0.19.0",
    "concurrently": "^4.1.2",
    "express": "^4.17.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.1.0",
    "react-scripts": "3.1.2",
    "styled-components": "^4.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"nodemon\" \"PORT=3000 react-scripts start\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ]
  },
  "proxy": "http://localhost:4000",
  "main": "./server/index.js",
  "devDependencies": {
    "@testing-library/react": "^9.4.0"
  }
}
